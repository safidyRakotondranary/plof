<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/plof</property>

        <property name="connection_pool_size">1</property>

        <property name="show_sql">true</property>

        <mapping resource="/mg/saplof/plof/database/mapping_files/Utilisateur.hbm.xml"/>
        <mapping resource="/mg/saplof/plof/database/mapping_files/Menu.hbm.xml"/>
        <mapping resource="/mg/saplof/plof/database/mapping_files/AttributMenu.hbm.xml"/>
        <mapping resource="/mg/saplof/plof/database/mapping_files/TypeUtilisateur.hbm.xml"/>
        <mapping resource="/mg/saplof/plof/database/mapping_files/Consistance.hbm.xml"/>
        <mapping resource="/mg/saplof/plof/database/mapping_files/Province.hbm.xml"/>
        <mapping resource="/mg/saplof/plof/database/mapping_files/Region.hbm.xml"/>
        <mapping resource="/mg/saplof/plof/database/mapping_files/District.hbm.xml"/>
        <mapping resource="/mg/saplof/plof/database/mapping_files/Commune.hbm.xml"/>
        <mapping resource="/mg/saplof/plof/database/mapping_files/Fokontany.hbm.xml"/>
        <mapping resource="/mg/saplof/plof/database/mapping_files/Hameau.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
